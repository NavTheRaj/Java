public class CheckArray{
  public  static void main(String args[])
  {
    int month_days[];
    month_days=new int[12];
    month_days[0]=31;
    month_days[1]=28;
    month_days[2]=31;
    month_days[3]=31;
    month_days[4]=28;
    month_days[5]=31;
    month_days[6]=31;
    month_days[7]=28;
    month_days[8]=31;
    month_days[9]=31;
    month_days[10]=28;
    month_days[11]=31;
    
    System.out.println("February has "+month_days[1]+" days.");
  }}
 
     
    
