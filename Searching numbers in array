import java.util.Scanner;

class Search_Array{
  
  public static void main(String args[]){
    
    Scanner sc=new Scanner(System.in);
    System.out.println("Enter the total number to add");
    int num=sc.nextInt();
    int count=0;
    
    int numbers[]=new int[num];
    
    for(int i=0;i<num;i++)
    {
      System.out.println("Enter the numbers here");
      numbers[i]=sc.nextInt();
    }
    
    System.out.println("Enter the number you want to search");
    int search_num=sc.nextInt();
    
    
    for(int i=0;i<num;i++)
    {
      if(search_num==numbers[i])
      {
      System.out.println("The number is in array location number["+(i+1)+"]");
      count++;
      
      
      }
    }
      if(count==0)
      {
        System.out.println("The number is not in array location");
        
      }
      else
      {
    
    System.out.println("Total number entered "+count);
  }
}
}
      
    
    
    
      
    
    
    
    
    
    
    
